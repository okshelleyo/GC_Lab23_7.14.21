@model Movie


<h4>Add a Movie!</h4>
<br />

<form action="SaveMovie" method="post">


    <label asp-for="Title"></label>
    <input type="text" asp-for="Title" value="@Model.Title" />
    <br />

    <label asp-for="Genre"></label>
    <input type="text" asp-for="Genre" value="@Model.Genre" />
    <br />

    <label asp-for="Runtime"></label>
    <input type="number" asp-for="Runtime" value="@Model.Runtime" />
    <br />

    @if (Model.Id != 0)
    {
        <input type="hidden" asp-for="Id" value="@Model.Id" />
    }

    <input type="submit" value="Submit" />


</form>
